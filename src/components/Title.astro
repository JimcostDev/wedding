---
// Title.astro
interface Props {
  tag?: 'h1' | 'h2' | 'h3' | 'h4';
  class?: string;
}

const { tag = 'h2', class: className = '' } = Astro.props;
const Tag = tag;

const sizeClasses = {
  h1: 'text-5xl md:text-6xl lg:text-7xl',
  h2: 'text-3xl md:text-4xl lg:text-5xl',
  h3: 'text-2xl md:text-3xl lg:text-4xl',
  h4: 'text-xl md:text-2xl lg:text-3xl',
};

const classes = `
  ${sizeClasses[tag]}
  font-serif
  text-center
  font-normal
  tracking-wide
  mb-6 md:mb-8
  ${className}
`;
---

<Tag class={classes.trim()}>
  <span class="bg-linear-to-r from-rose-600 via-rose-500 to-rose-400 bg-clip-text text-transparent">
    <slot />
  </span>
</Tag>