---
// Itinerario.astro
import Title from "./Title.astro";

const eventos = [
  { hora: "18:30", titulo: "Recepción", descripcion: "Llegada de invitados", icon: '<span class="icon-[radix-icons--people] w-6 h-6"></span>' },
  { hora: "19:00", titulo: "Ceremonia", descripcion: "¡El sí, quiero!", icon: '<span class="icon-[hugeicons--wedding] w-6 h-6"></span>' },
  { hora: "20:00", titulo: "Cóctel", descripcion: "Aperitivos", icon: '<span class="icon-[mynaui--cocktail] w-6 h-6"></span>' },
  { hora: "21:00", titulo: "Cena", descripcion: "Banquete nupcial", icon: '<span class="icon-[lineicons--dinner] w-6 h-6"></span>' },
  { hora: "22:30", titulo: "Fiesta", descripcion: "Celebración", icon: '<span class="icon-[hugeicons--party] w-6 h-6"></span>' }
];
---

<section class="py-16 md:py-24 bg-slate-50 overflow-hidden">
  <div class="max-w-4xl mx-auto px-4 relative">
    
    {/* Encabezado */}
    <div class="text-center mb-16 md:mb-24">
      <Title>Itinerario del Día</Title>
      
      {/* CAMBIO: Tipografía unificada con el Contador (Playfair Display + Tamaño mayor) */}
      <p 
        class="text-stone-500 italic text-lg md:text-xl mt-4"
        style="font-family: 'Playfair Display', serif;"
      >
        "Cada momento cuenta en nuestra historia"
      </p>
    </div>

    {/* LÍNEA DE TIEMPO VERTICAL */}
    <div class="relative">
      
      {/* La línea central */}
      <div class="absolute left-4 md:left-1/2 top-0 bottom-0 w-px bg-gradient-to-b from-transparent via-lime-800/30 to-transparent md:-translate-x-1/2"></div>

      {/* Lista de eventos */}
      <div class="space-y-12 md:space-y-0">
        {eventos.map((evento, index) => (
          <div class={`relative flex flex-col md:flex-row items-center ${index % 2 === 0 ? 'md:flex-row-reverse' : ''} group`}>
            
            {/* 1. EL CONTENIDO (Texto) */}
            <div class="flex-1 w-full md:w-1/2 pl-12 md:pl-0">
              <div 
                class={`bg-white p-6 rounded-2xl border border-stone-100 shadow-sm hover:shadow-md transition-all duration-500 group-hover:-translate-y-1 text-left 
                ${index % 2 === 0 ? 'md:text-left md:ml-10' : 'md:text-right md:mr-10'}`}
              >
                <div class="text-2xl md:text-3xl font-serif text-lime-800 mb-2">
                  {evento.hora}
                </div>
                <h3 class="text-lg font-semibold text-stone-800 uppercase tracking-wide font-sans mb-1">
                  {evento.titulo}
                </h3>
                <p class="text-stone-500 font-serif italic text-sm">
                  {evento.descripcion}
                </p>
              </div>
            </div>

            {/* 2. EL ICONO (Nodo central) */}
            <div class="absolute left-4 md:left-1/2 -translate-x-1/2 flex items-center justify-center">
              <div class="w-10 h-10 md:w-12 md:h-12 bg-white border border-lime-800/30 rounded-full flex items-center justify-center text-lime-800 shadow-sm z-10 group-hover:scale-110 group-hover:border-lime-800 group-hover:bg-lime-50 transition-all duration-300">
                <div class="opacity-80 group-hover:opacity-100 transition-opacity">
                  <Fragment set:html={evento.icon} />
                </div>
              </div>
            </div>

            {/* 3. ESPACIO VACÍO */}
            <div class="hidden md:block flex-1"></div>

          </div>
        ))}
      </div>
    </div>

    {/* Nota informativa */}
    <div class="mt-20 text-center">
      <div class="inline-block bg-white border border-lime-800/20 rounded-full px-6 py-3 shadow-sm">
        <p class="text-xs md:text-sm text-stone-600 font-sans">
          <span class="font-semibold text-lime-800">Nota:</span> Los horarios son aproximados
        </p>
      </div>
    </div>

  </div>
</section>