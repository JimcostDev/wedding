---
// Location.astro
import Title from "./Title.astro";
const mapUrl = "https://maps.google.com/maps?q=Quinta+Lacy+Av.+San+Luis+de+Cuba+1+Elda&t=&z=15&ie=UTF8&iwloc=&output=embed";

const locationData = {
  name: "Quinta Lacy, Alicante",
  address: "Av. San Luis de Cuba, 1, 03600 Elda",
  description: "Celebraremos nuestro gran día en este precioso entorno rodeado de jardines.",
  mapsUrl: "https://maps.app.goo.gl/DztKWzdMA8BokJAo6" // El enlace para el botón "Abrir en Google Maps"
};
---

<section class="py-16 md:py-24 bg-linear-to-b from-white to-rose-50/30">
  <div class="max-w-6xl mx-auto px-4">
    {/* Encabezado */}
    <div class="text-center mb-12 md:mb-16 lg:mb-20">
      <Title>Lugar de la Celebración</Title>
      <div class="mt-6 space-y-2">
        <h3 class="text-2xl md:text-3xl lg:text-4xl font-serif text-gray-900">
          {locationData.name}
        </h3>
        <p class="text-base md:text-lg text-rose-600 font-light tracking-wide">
          {locationData.address}
        </p>
      </div>
    </div>

    {/* Grid principal */}
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 md:gap-12 lg:gap-16 items-center">
      {/* Sección de información - Orden en mobile */}
      <div class="order-2 lg:order-1">
        <div class="space-y-6 md:space-y-8">
          {/* Bloque de información */}
          <div class="bg-white p-6 md:p-8 rounded-2xl border border-rose-100 shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-start gap-4">
              <div class="shrink-0 w-12 h-12 bg-linear-to-br from-rose-500 to-rose-600 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0zM15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <div>
                <h4 class="text-lg font-semibold text-gray-900 mb-1">¿Cómo llegar?</h4>
                <p class="text-gray-600 text-sm md:text-base leading-relaxed">
                  {locationData.description}
                </p>
              </div>
            </div>
          </div>

          {/* Detalles adicionales */}
          <div class="grid grid-cols-2 gap-4 md:gap-6">
            <div class="bg-linear-to-br from-rose-50 to-pink-50 p-5 md:p-6 rounded-xl border border-rose-100">
              <div class="text-sm uppercase tracking-widest text-rose-600 font-semibold mb-2">Horario</div>
              <p class="text-gray-900 font-light text-lg">18:30 h</p>
            </div>
            <div class="bg-linear-to-br from-rose-50 to-pink-50 p-5 md:p-6 rounded-xl border border-rose-100">
              <div class="text-sm uppercase tracking-widest text-rose-600 font-semibold mb-2">Tipo</div>
              <p class="text-gray-900 font-light text-lg">Recepción</p>
            </div>
          </div>

          {/* Botón CTA */}
          <a
            href={locationData.mapsUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center w-full md:w-auto bg-linear-to-r from-rose-500 to-rose-600 text-white px-8 md:px-10 py-3 md:py-4 rounded-full hover:shadow-lg transition-all duration-300 transform hover:scale-105 font-medium group"
          >
            <svg class="w-5 h-5 mr-2 transition-transform group-hover:rotate-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4m-4-6l6-6m0 0l-6 6m6-6v6"/>
            </svg>
            Abrir en Google Maps
          </a>
        </div>
      </div>

      {/* Mapa - Orden en mobile */}
      <div class="order-1 lg:order-2">
        <div class="relative h-80 sm:h-96 md:h-full lg:h-[450px] rounded-2xl overflow-hidden shadow-xl border border-rose-100 group">
          {/* Efecto de hover */}
          <div class="absolute -inset-1 bg-linear-to-r from-rose-200 via-pink-200 to-rose-200 rounded-2xl opacity-0 group-hover:opacity-20 transition-opacity duration-300 blur-xl -z-10"></div>
          
          <iframe
            title="Ubicación exacta de la ceremonia"
            src={mapUrl}
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            class="absolute inset-0 w-full h-full"
            aria-label="Mapa interactivo de la ubicación"
          />
          
          {/* Overlay decorativo */}
          <div class="absolute inset-0 bg-linear-to-t from-black/5 via-transparent to-transparent pointer-events-none"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Suavizar animaciones */
  @media (prefers-reduced-motion: no-preference) {
    a:hover {
      animation: subtle-bounce 0.6s ease-in-out;
    }
  }
  
  @keyframes subtle-bounce {
    0%, 100% { transform: translateY(0) scale(1.05); }
    50% { transform: translateY(-2px) scale(1.05); }
  }
</style>