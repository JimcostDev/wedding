---
// Location.astro
import Title from "./Title.astro";
const mapUrl = "https://maps.google.com/maps?q=Quinta+Lacy+Av.+San+Luis+de+Cuba+1+Elda&t=&z=15&ie=UTF8&iwloc=&output=embed";

const locationData = {
  name: "Quinta Lacy, Alicante",
  address: "Av. San Luis de Cuba, 1, 03600 Elda",
  description: "Celebraremos nuestro gran día en este precioso entorno rodeado de jardines.",
  mapsUrl: "https://maps.app.goo.gl/DztKWzdMA8BokJAo6"
};
---

{/* CAMBIO: De 'bg-gradient-to-b from-white...' a 'bg-slate-50' para que no haya corte con el contador */}
<section class="py-16 md:py-24 bg-slate-50">
  <div class="max-w-6xl mx-auto px-4">
    {/* Encabezado */}
    <div class="text-center mb-12 md:mb-16 lg:mb-20">
      <Title>Lugar de la Celebración</Title>
      <div class="mt-6 space-y-2">
        <h3 class="text-2xl md:text-3xl lg:text-4xl font-serif text-stone-800">
          {locationData.name}
        </h3>
        <p class="text-base md:text-lg text-lime-800 font-extralight tracking-wide font-serif">
          {locationData.address}
        </p>
      </div>
    </div>

    {/* Grid principal */}
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 md:gap-12 lg:gap-16 items-center">
      {/* Sección de información */}
      <div class="order-2 lg:order-1">
        <div class="space-y-6 md:space-y-8">
          {/* Bloque de información */}
          <div class="bg-white p-6 md:p-8 rounded-2xl border border-stone-200 shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-start gap-4">
              <div class="shrink-0 w-12 h-12 bg-gradient-to-br from-lime-700 to-lime-800 rounded-full flex items-center justify-center shadow-md">
                <span class="icon-[mynaui--location] w-6 h-6 text-white"></span>
              </div>
              <div>
                <h4 class="text-lg font-semibold text-stone-800 mb-1 font-serif">¿Cómo llegar?</h4>
                <p class="text-stone-600 text-sm md:text-base leading-relaxed font-serif">
                  {locationData.description}
                </p>
              </div>
            </div>
          </div>

          {/* Detalles adicionales */}
          <div class="grid grid-cols-2 gap-4 md:gap-6">
            <div class="bg-white p-5 md:p-6 rounded-xl border border-stone-100 shadow-sm">
              <div class="text-sm uppercase tracking-widest text-lime-800 font-semibold mb-2 font-serif">Horario</div>
              <p class="text-stone-800 font-light text-lg font-serif">18:30 h</p>
            </div>
            <div class="bg-white p-5 md:p-6 rounded-xl border border-stone-100 shadow-sm">
              <div class="text-sm uppercase tracking-widest text-lime-800 font-semibold mb-2 font-serif">Tipo</div>
              <p class="text-stone-800 font-light text-lg font-serif">Recepción</p>
            </div>
          </div>

          {/* Botón CTA */}
          <a
            href={locationData.mapsUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center w-full md:w-auto bg-gradient-to-r from-lime-800 to-lime-900 text-white px-8 md:px-10 py-3 md:py-4 rounded-full hover:shadow-lg transition-all duration-300 transform hover:scale-105 font-medium group"
          >
            <span class="icon-[streamline-ultimate--maps] w-5 h-5 mr-2 transition-transform group-hover:scale-110"></span>
            <span class="font-serif tracking-wide">Abrir en Google Maps</span>
          </a>
        </div>
      </div>

      {/* Mapa */}
      <div class="order-1 lg:order-2">
        <div class="relative h-80 sm:h-96 md:h-full lg:h-[450px] rounded-2xl overflow-hidden shadow-xl border border-stone-200 group">
          <div class="absolute -inset-1 bg-gradient-to-r from-lime-200 via-stone-200 to-lime-200 rounded-2xl opacity-0 group-hover:opacity-20 transition-opacity duration-300 blur-xl -z-10"></div>
          <iframe
            title="Ubicación exacta de la ceremonia"
            src={mapUrl}
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            class="absolute inset-0 w-full h-full"
            aria-label="Mapa interactivo de la ubicación"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-stone-900/5 via-transparent to-transparent pointer-events-none"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @media (prefers-reduced-motion: no-preference) {
    a:hover {
      animation: subtle-bounce 0.6s ease-in-out;
    }
  }
  
  @keyframes subtle-bounce {
    0%, 100% { transform: translateY(0) scale(1.05); }
    50% { transform: translateY(-2px) scale(1.05); }
  }
</style>