---
// RSVP.astro
import Title from "./Title.astro";

const formularioUrl = "https://docs.google.com/forms/d/e/1FAIpQLSeWJJdj1HpJEBYtkPW618ULOP7FLtO4_GnZ-rNaZlEarWWbyA/viewform?usp=header";
const bizumRonaldo = "624499125";
const bizumPaula = "644774435";
const ibanEjemplo = "ES27 0049 3978 6828 1415 7212";
---

<section class="py-16 md:py-24 bg-slate-50">
  <div class="max-w-6xl mx-auto px-4">
    
    {/* ===== CONFIRMACIÓN DE ASISTENCIA ===== */}
    <div class="mb-20 md:mb-28">
      <div class="text-center">
        <Title>Confirma tu Asistencia</Title>
        <p 
          class="text-stone-500 text-lg md:text-xl mt-4 mb-8 italic"
          style="font-family: 'Playfair Display', serif;"
        >
          Nos encantaría contar contigo en nuestro gran día
        </p>
        
        <a
          href={formularioUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-3 bg-gradient-to-r from-lime-800 to-lime-900 hover:from-lime-900 hover:to-lime-950 text-white px-10 md:px-14 py-4 md:py-5 rounded-full transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105 font-medium text-lg md:text-xl group tracking-wide"
          style="font-family: 'Montserrat', sans-serif;"
        >
          {/* ICONO 1: Fiesta */}
          <span class="icon-[hugeicons--party] w-6 h-6"></span>
          <span>Confirmar Asistencia</span>
        </a>
        
        <p class="mt-8 text-lime-800 font-medium text-sm md:text-base tracking-wide flex items-center justify-center gap-2" style="font-family: 'Montserrat', sans-serif;">
          {/* ICONO 2: Calendario */}
          <span class="icon-[tabler--calendar] w-5 h-5"></span>
          <span>Confirma antes del <span class="font-bold">01 de Septiembre</span></span>
        </p>
      </div>
    </div>

    {/* ===== REGALOS ===== */}
    <div>
      <div class="text-center mb-12 md:mb-16">
        <Title>Regalo de Bodas</Title>
        <p 
          class="text-stone-500 text-lg md:text-xl mt-4 italic"
          style="font-family: 'Playfair Display', serif;"
        >
          Tu presencia es el mejor regalo, pero si deseas contribuir:
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 md:gap-10 lg:gap-12">
        
        {/* BIZUM */}
        <div class="group bg-white rounded-2xl border border-stone-200 overflow-hidden shadow-sm hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
          {/* Header */}
          <div class="bg-stone-50 p-6 md:p-8 border-b border-stone-100">
            <div class="flex items-center justify-center mb-4">
              <div class="w-14 h-14 bg-gradient-to-br from-lime-700 to-lime-800 rounded-full flex items-center justify-center shadow-md">
                {/* ICONO 3: Euro Send */}
                <span class="icon-[hugeicons--euro-send] w-7 h-7 text-white"></span>
              </div>
            </div>
            <h3 class="text-2xl md:text-3xl text-stone-800 text-center" style="font-family: 'Playfair Display', serif;">
              Bizum
            </h3>
          </div>

          {/* Contenido */}
          <div class="p-6 md:p-8 space-y-6">
            {/* Ronaldo */}
            <div class="space-y-2">
              <label class="text-xs font-bold text-lime-800 uppercase tracking-widest block mb-1" style="font-family: 'Montserrat', sans-serif;">
                Para Ronaldo
              </label>
              <button 
                class="w-full copy-btn bg-stone-50 border border-stone-200 hover:border-lime-600 text-stone-800 px-4 py-3 rounded-lg transition-all duration-300 font-mono text-lg tracking-wide font-medium group/btn hover:bg-white flex items-center justify-between"
                data-clipboard-text={bizumRonaldo}
              >
                <span>{bizumRonaldo}</span>
                <span class="text-xs uppercase bg-stone-200 px-2 py-1 rounded text-stone-600 group-hover/btn:bg-lime-100 group-hover/btn:text-lime-800 transition-colors">Copiar</span>
              </button>
            </div>

            {/* Paula */}
            <div class="space-y-2">
              <label class="text-xs font-bold text-lime-800 uppercase tracking-widest block mb-1" style="font-family: 'Montserrat', sans-serif;">
                Para Paula
              </label>
              <button 
                class="w-full copy-btn bg-stone-50 border border-stone-200 hover:border-lime-600 text-stone-800 px-4 py-3 rounded-lg transition-all duration-300 font-mono text-lg tracking-wide font-medium group/btn hover:bg-white flex items-center justify-between"
                data-clipboard-text={bizumPaula}
              >
                <span>{bizumPaula}</span>
                <span class="text-xs uppercase bg-stone-200 px-2 py-1 rounded text-stone-600 group-hover/btn:bg-lime-100 group-hover/btn:text-lime-800 transition-colors">Copiar</span>
              </button>
            </div>
          </div>
        </div>

        {/* TRANSFERENCIA BANCARIA */}
        <div class="group bg-white rounded-2xl border border-stone-200 overflow-hidden shadow-sm hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
          {/* Header */}
          <div class="bg-stone-50 p-6 md:p-8 border-b border-stone-100">
            <div class="flex items-center justify-center mb-4">
              <div class="w-14 h-14 bg-gradient-to-br from-lime-700 to-lime-800 rounded-full flex items-center justify-center shadow-md">
                {/* ICONO 4: Card */}
                <span class="icon-[ion--card] w-7 h-7 text-white"></span>
              </div>
            </div>
            <h3 class="text-2xl md:text-3xl text-stone-800 text-center" style="font-family: 'Playfair Display', serif;">
              Transferencia
            </h3>
          </div>

          {/* Contenido */}
          <div class="p-6 md:p-8 space-y-4">
            <p class="text-sm text-stone-500 text-center font-serif italic">
              Número de cuenta (IBAN)
            </p>
            <button 
              class="w-full copy-btn bg-stone-50 border border-stone-200 hover:border-lime-600 text-stone-800 px-4 py-4 rounded-lg transition-all duration-300 font-mono text-base md:text-lg tracking-wide font-medium group/btn hover:bg-white flex items-center justify-between gap-2"
              data-clipboard-text={ibanEjemplo}
            >
              <span class="truncate">{ibanEjemplo}</span>
              <span class="text-xs uppercase bg-stone-200 px-2 py-1 rounded text-stone-600 group-hover/btn:bg-lime-100 group-hover/btn:text-lime-800 transition-colors flex-shrink-0">Copiar</span>
            </button>
          </div>
        </div>
      </div>

      {/* Nota informativa */}
      <div class="mt-16 flex justify-center">
        <div class="bg-white border border-lime-800/20 rounded-full px-8 py-4 shadow-sm">
          <p class="text-sm md:text-base text-stone-600 font-sans">
            <span class="font-bold text-lime-800">Nota:</span> Si prefieres, puedes realizar el regalo en efectivo el día de la boda.
          </p>
        </div>
      </div>
    </div>
  </div>

  {/* Script para copiar */}
  <script is:inline>
    document.querySelectorAll('.copy-btn').forEach(btn => {
      btn.addEventListener('click', async () => {
        try {
          await navigator.clipboard.writeText(btn.dataset.clipboardText);
          
          // Guardamos el HTML del botón auxiliar (el span de "Copiar")
          const actionSpan = btn.querySelector('span:last-child');
          const originalText = actionSpan.innerText;
          const originalClasses = actionSpan.className;
          
          // Cambiamos a estado "Copiado"
          actionSpan.innerText = "✅ ¡Listo!";
          actionSpan.className = "text-xs uppercase bg-lime-800 text-white px-2 py-1 rounded font-bold transition-colors";
          
          btn.classList.add('bg-lime-50', 'border-lime-500');
          
          setTimeout(() => {
            actionSpan.innerText = originalText;
            actionSpan.className = originalClasses;
            btn.classList.remove('bg-lime-50', 'border-lime-500');
          }, 2000);
        } catch (err) {
          alert('Error al copiar, por favor selecciona manualmente');
        }
      });
    });
  </script>
</section>