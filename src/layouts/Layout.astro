---
interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
}

import '@styles/global.css';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import { ClientRouter } from 'astro:transitions';

const {
  title = "You're My Penguin",
  description = 'Acompáñanos en la celebración de nuestra boda. Encuentra toda la información sobre el evento, ubicación, itinerario y confirma tu asistencia.',
  canonical = 'https://ourwedding.jimcostdev.com',
  ogImage = 'https://ourwedding.jimcostdev.com/foto-boda.jpg',
} = Astro.props;

const pageTitle = `${title} Paula ❤️ Ronaldo`;
---

<!doctype html>
<html lang="es" class="scroll-smooth" itemscope itemtype="https://schema.org/Event">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />
    <meta name="revisit-after" content="7 days" />
    <meta name="language" content="Spanish" />

    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    <link rel="icon" type="image/webp" href="/you-are-my-penguin.png" sizes="any" />

    {/* Open Graph */}
    <meta property="og:type" content="website" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={canonical} />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="Paula & Ronaldo" />

    {/* Twitter */}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    {/* Structured Data - Evento */}
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Event",
        "name": "Boda Paula & Ronaldo",
        "description": "Celebración de la boda de Paula y Ronaldo",
        "startDate": "2026-03-29T17:00:00+01:00",
        "endDate": "2026-03-30T02:00:00+01:00",
        "location": {
          "@type": "Place",
          "name": "Cala Victoria, Alcúdia",
          "address": {
            "@type": "PostalAddress",
            "streetAddress": "Carrer de sa Cala",
            "addressLocality": "Alcúdia",
            "postalCode": "07400",
            "addressCountry": "ES"
          }
        },
        "image": ogImage,
        "organizer": [
          { "@type": "Person", "name": "Paula" },
          { "@type": "Person", "name": "Ronaldo" }
        ]
      })}
    </script>

    {/* Fonts */}
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <ClientRouter />
  </head>

  <body class="bg-white text-gray-900 antialiased">
    <a 
      href="#main-content" 
      class="sr-only focus:not-sr-only focus:fixed top-4 left-4 bg-rose-600 text-white px-4 py-2 rounded-lg z-50 font-medium"
    >
      Saltar al contenido principal
    </a>

    <Header />

    <main id="main-content" class="w-full">
      <slot />
    </main>

    <Footer />
  </body>
</html>
