---
interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
}

import '@styles/global.css';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import { ClientRouter } from 'astro:transitions';

const {
  title = "You're My Penguin",
  description = 'Acomp谩帽anos en la celebraci贸n de nuestra boda. Encuentra toda la informaci贸n sobre el evento, ubicaci贸n, itinerario y confirma tu asistencia.',
  canonical = 'https://ourwedding.jimcostdev.com',
  ogImage = 'https://ourwedding.jimcostdev.com/foto-boda.jpg',
} = Astro.props;

const pageTitle = `${title}:  Paula わ Ronaldo `;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="Spanish" />

    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    
    <link rel="icon" type="image/webp" href="/you-are-my-penguin.png" sizes="any" />
    <link rel="apple-touch-icon" href="/you-are-my-penguin.png" />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={canonical} />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="Paula & Ronaldo" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <script type="application/ld+json">
    {JSON.stringify({
      "@context": "https://schema.org",
      "@type": "SocialEvent",
      "name": "Boda Paula & Ronaldo",
      "description": "Celebraci贸n de la boda de Paula y Ronaldo en Quinta Lacy",
      "eventStatus": "https://schema.org/EventScheduled",
      "eventAttendanceMode": "https://schema.org/OfflineEventAttendanceMode",
      "startDate": "2026-10-03T18:30:00+02:00", 
      "endDate": "2026-10-04T02:00:00+02:00",
      "location": {
        "@type": "Place",
        "name": "Quinta Lacy",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Av. San Luis de Cuba, 1",
          "addressLocality": "Elda",
          "addressRegion": "Alicante",
          "postalCode": "03600",
          "addressCountry": "ES"
        },
        "geo": { 
          "@type": "GeoCoordinates",
          "latitude": 38.45358342550134,  
          "longitude": -0.8110992711639404
        }
      },
      "image": ogImage,
      "organizer": [
        { "@type": "Person", "name": "Paula" },
        { "@type": "Person", "name": "Ronaldo" }
      ]
    })}
    </script>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Montserrat:wght@300;400;600&display=swap" rel="stylesheet">

    <ClientRouter />
  </head>

  <body class="bg-white text-gray-900 antialiased">
    <a 
      href="#main-content" 
      class="sr-only focus:not-sr-only focus:fixed top-4 left-4 bg-rose-600 text-white px-4 py-2 rounded-lg z-50 font-medium shadow-lg"
    >
      Saltar al contenido principal
    </a>

    <Header />

    <main id="main-content" class="w-full">
      <slot />
    </main>

    <Footer />
  </body>
</html>